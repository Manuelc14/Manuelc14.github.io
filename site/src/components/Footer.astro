---
const year = new Date().getFullYear();
const yearParams = JSON.stringify({ year });
---

<footer class="footer" role="contentinfo">
    <div class="footer__inner container">
        <p
            class="footer__copy"
            data-i18n="footer.copy"
            data-i18n-params={yearParams}
        >
        </p>

        <a
            class="footer__top"
            href="#home"
            data-i18n-attr="title:footer.to_top; aria-label:footer.to_top"
        >
            <i class="bx bxs-up-arrow-square" aria-hidden="true"></i>
            <span class="sr-only" data-i18n="footer.to_top"></span>
        </a>
    </div>
</footer>
